# Truthlens Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend API Base URL
NEXT_PUBLIC_API_BASE=http://127.0.0.1:8000

# =============================================================================
# DETECTION SERVICE CONFIGURATION
# =============================================================================

# Primary Detection Service: RealityDefender
# The backend now uses RealityDefender as the primary detection service
# with local ensemble models as backup
NEXT_PUBLIC_PRIMARY_SERVICE=realitydefender
NEXT_PUBLIC_BACKUP_SERVICE=ensemble

# Service Status Monitoring
NEXT_PUBLIC_ENABLE_SERVICE_STATUS=true
NEXT_PUBLIC_SERVICE_STATUS_INTERVAL=30000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# File Upload Limits
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_ACCEPTED_FORMATS=video/mp4,video/avi,video/mov,video/webm,image/jpeg,image/png,image/gif,image/webp

# Upload Progress Settings
NEXT_PUBLIC_ENABLE_UPLOAD_PROGRESS=true
NEXT_PUBLIC_CHUNK_UPLOAD=false

# =============================================================================
# REALITYDEFENDER CONFIGURATION
# =============================================================================

# RealityDefender API Key (configured on backend)
# This is just for reference - actual API key is configured in backend/.env
# Get your API key from https://realitydefender.com
NEXT_PUBLIC_REALITYDEFENDER_INFO=Configure your API key in backend/.env

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Service Status Display
NEXT_PUBLIC_SHOW_SERVICE_STATUS=true
NEXT_PUBLIC_SHOW_PROCESSING_DETAILS=true

# Results Display
NEXT_PUBLIC_ENABLE_HEATMAPS=true
NEXT_PUBLIC_ENABLE_DETAILED_SIGNALS=true
NEXT_PUBLIC_ENABLE_MODEL_BREAKDOWN=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug Mode
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Development Features
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_METRICS=true