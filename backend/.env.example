# Deepfake Detection Backend Configuration - Example
# Copy this file to .env and update the values

# Model Configuration - Ensemble
MESONET_MODEL_PATH=./models/mesonet4.onnx
XCEPTION_MODEL_PATH=./models/xception.onnx

# Model Ensemble Weights (should sum to 1.0)
MESONET_WEIGHT=0.4
XCEPTION_WEIGHT=0.6

# Detection Thresholds
CONFIDENCE_THRESHOLD=0.7
HIGH_CONFIDENCE_THRESHOLD=0.85
LOW_CONFIDENCE_THRESHOLD=0.3

# Video Processing
MAX_FRAMES_TO_PROCESS=30
FRAME_SKIP_SIMILARITY_THRESHOLD=0.95

# File Upload Settings
MAX_FILE_SIZE_MB=100
MAX_DOWNLOAD_SIZE_MB=200
UPLOAD_DIR=./uploads

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
SECRET_KEY=change-this-to-a-secure-random-string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Background Task Settings
CLEANUP_INTERVAL_HOURS=24
MAX_CONCURRENT_ANALYSES=5

# Development Settings
DEBUG=true
RELOAD=true

# Production Settings (uncomment for production)
# DEBUG=false
# RELOAD=false
# API_WORKERS=4
# LOG_LEVEL=WARNING